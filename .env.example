# Application Settings
APP_NAME=AutoScholar
APP_VERSION=0.1.0
APP_ENV=development
APP_DEBUG=true

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=autoscholar
DATABASE_USER=autoscholar_user
DATABASE_PASSWORD=change_me_in_production

# LLM Providers Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# Qwen (通义千问)
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1
QWEN_MODEL=qwen-max
QWEN_TEMPERATURE=0.7
QWEN_MAX_TOKENS=4000

# Zhipu AI (智谱AI)
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_API_BASE=https://open.bigmodel.cn/api/paas/v4
ZHIPU_MODEL=glm-4
ZHIPU_TEMPERATURE=0.7
ZHIPU_MAX_TOKENS=4000

# Kimi (月之暗面)
KIMI_API_KEY=your_kimi_api_key_here
KIMI_API_BASE=https://api.moonshot.cn/v1
KIMI_MODEL=moonshot-v1-8k
KIMI_TEMPERATURE=0.7
KIMI_MAX_TOKENS=4000

# Default LLM Provider
LLM_DEFAULT_PROVIDER=openai
LLM_FALLBACK_PROVIDER=qwen

# Crawler Configuration
CRAWLER_USER_AGENT=AutoScholar/0.1.0 (Research Tool)
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=5
CRAWLER_CONCURRENT_LIMIT=3

# Task Scheduler Configuration
SCHEDULER_CRAWL_CRON=0 8 * * *
SCHEDULER_GENERATE_CRON=0 9 * * *
SCHEDULER_CLEANUP_CRON=0 2 * * 0
SCHEDULER_TIMEZONE=Asia/Shanghai

# Storage Configuration
STORAGE_REPORTS_PATH=./data/reports
STORAGE_TEMP_PATH=./data/temp
STORAGE_LOG_PATH=./data/logs
STORAGE_LOG_RETENTION_DAYS=90

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your_api_key_for_manual_trigger
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
